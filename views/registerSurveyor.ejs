                    <option   value="neg">Non-Engineering Graduate
                    </option>                     
                    <option  value="Diploma">Diploma in Civil Engineering</option>
                    <option  value="barch">B.Arch</option>
                    <option  value="bec">B.E. in Civil Engineering</option>
                    <option  value="Architect">Architect with minimum 3 years experience</option>
                    <option  value="Civil">Civil Engineer with  minimum 3 years experience</option>
                    <option  value="dip3">Diploma(Civil) with minimum 3 years experience</option>
                    </select>

                </div>
            </div> <!-- col-sm-4 -->
				  <!-- country, pincode, qualification end  -->
                    
                    <div class="col-sm-12 col-xs-12" style="padding:5px">
                       <label>Eligibility Criteria</label><br/>
                       <label>Type of Membership</label>
                       <i class="fa fa-question-circle pull-right" style="margin-top:-28px;font-size:20px;cursor:pointer; margin-right:2px;" data-toggle="modal" data-target=".help-modal"></i>
                    </div>
                    
                  <!-- membership type select start  -->
                    <div class="col-sm-4 col-xs-12" style="padding:5px">
