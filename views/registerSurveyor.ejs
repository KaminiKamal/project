                                    <option selected="selected"> Type of Membership </option> 
                                    <option> Life Time Membership</option>
                                    <option> Annual Membership</option>                                     
                            </select>
                        </div>
                    </div> <!-- col-sm-4 -->
                  
                 <!-- email, confirm email, phone, password, confirm password  end -->
                    
                    <div class="clearfix"></div>
                    
                    <button class="orange-btn" type="button" id="btn" style="margin:30px auto 20px; width:43%; "><i class="fa fa-sign-in"></i>&nbsp; CONTINUE MEMBERSHIP</button>
					
                </form>
			</div>  <!-- sign-up-bg -->
