<script>
$(document).ready(function() {
    var m = "Non-Professional Surveyor";
     $('#m1').click(function () {
        m=$("#m1").val();

        $("#i1").addClass("fa fa-check-circle");
        $("#i1").removeClass("fa-circle-o");

        // remove from other two
        $("#i2").removeClass("fa-check-circle"); $("#i2").addClass("fa-circle-o");
        $("#i3").removeClass("fa-check-circle"); $("#i3").addClass("fa-circle-o");
     });
     $('#m2').click(function () {
        m=$("#m2").val();
         
        $("#i2").addClass("fa fa-check-circle");
        $("#i2").removeClass("fa-circle-o");

        // remove from other two
        $("#i1").removeClass("fa-check-circle"); $("#i1").addClass("fa-circle-o");
        $("#i3").removeClass("fa-check-circle"); $("#i3").addClass("fa-circle-o");   
     });
     $('#m3').click(function () {
        m=$("#m3").val();
         
        $("#i3").addClass("fa fa-check-circle");
        $("#i3").removeClass("fa-circle-o");

        // remove from other two
        $("#i1").removeClass("fa-check-circle"); $("#i1").addClass("fa-circle-o");
        $("#i2").removeClass("fa-check-circle"); $("#i2").addClass("fa-circle-o");  
     });
    $('#btn').click(function () {  
          var data = {
            prefix            : $("input:radio[name=inlineRadioOptions]:checked").val(),
            firstname         : $("#firstName").val(),
            middlename        : $("#middleName").val(),
            lastname          : $("#lastName").val(),
            postaladdress     : $("#postalAddress").val(),
            street            : $("#streetName").val(),
            city              : $("#cityName").val(),
            state             : $("#stateName").val(),
            country           : $("#countryName").val(),
            pincode           : $("#pincode").val(),
            qualification     : $("#qualification").val(),
            membershiptype    : m,
            email             : $("#emailID").val(),
            phone             : $("#phoneNumber").val(),
            password          : $("#password").val(),
            MemberDuration    : $("#MemberDuration").val()
           }
      console.log(data);
        $.ajax({
        type:"POST",
        url:"/regsurvey",
        async : false ,
        data :  data, 
        //dataType: 'json',  // multiple data sent using ajax
        success: function (result) {
                    $.ajax({
                        type:"POST",
                         url:"/sendRegisterMail",
                         async : false ,
                          data :  data, 
                          success : function(result) {
                              // make ajax Request
                            alert('User Has Been Registered ');
                            window.location.href="/welcome"
              
                          }
                    })
               
            }
        });
    });
});
</script>