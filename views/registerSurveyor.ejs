                        </div>
                    </div> <!-- col-sm-4 -->
				  <!-- street, city, state end  -->
                    
                  <!-- country, pincode, qualification start -->
                    <div class="col-sm-4 col-xs-12" style="padding:5px">
                        <div class="form-group">
                            <input type="text" class="form-control" name="countryName" id="countryName" placeholder="Country">
                        </div>
                    </div> <!-- col-sm-4 -->
                  
                    <div class="col-sm-4 col-xs-12" style="padding:5px">
                        <div class="form-group">
                            <input type="text" class="form-control" name="pincode" 
                            id="pincode" placeholder="Pincode">
                        </div>
                    </div> <!-- col-sm-4 -->
                    
            <div class="col-sm-4 col-xs-12" style="padding:5px">
                <div class="form-group">
                           
                    <select class="form-control" name="qualification" id="qualification" >
                    <option selected="selected"> Choose Qualification</option>
