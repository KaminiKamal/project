                  <!-- email, confirm email, phone, password, confirm password start-->
                    
                    <div class="col-sm-4 col-xs-12" style="padding:5px">
                        <div class="form-group">
                            <input type="email" class="form-control" name="emailID" 
                            id="emailID" placeholder="Email ID">
                        </div>
                    </div>  <!-- col-sm-4 -->
                    
                    <div class="col-sm-4 col-xs-12" style="padding:5px">
                        <div class="form-group">
                            <input type="email" class="form-control" name="confirmEmailId" placeholder="Confirm your Email ID">
                        </div>
                    </div> <!-- col-sm-4 -->
                    
                    <div class="col-sm-4 col-xs-12" style="padding:5px">
                        <div class="form-group">
                            <input type="text" class="form-control" name="phoneNumber" 
                            id="phoneNumber" placeholder="Phone">
                        </div>
                    </div> <!-- col-sm-4 -->
                    
